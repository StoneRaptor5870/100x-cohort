{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"  // Explicitly include all files under the src directory
  ],
  "exclude": [
    "node_modules",  // Typically you want to exclude node_modules
    "dist"           // Exclude the output directory to avoid compiling output files
  ]
}